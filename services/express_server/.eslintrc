{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": ["plugin:prettier/recommended", "plugin:jest/recommended"],
    "rules": {
        "prettier/prettier": ["error", {
            "singleQuote": true,
            "tabWidth": 4,
            "trailingComma": "all"
        }],
        "jest/consistent-test-it": [
            "error",
            {"fn": "it"}
        ]
    }
}
